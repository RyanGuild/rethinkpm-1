{
    "printWidth": 80,
    "tabWidth": 4,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "bracketSpacing": false,
    "jsxBracketSameLine": false,
    "arrowParens": "always",
    "requirePragma": false,
    "insertPragma": false,
    "proseWrap": "preserve",
    "overrides": [
        {
            "files": [
                "src/*.jsx",
                "src/**/*.jsx"
            ],
            "options": {
                "tabWidth": 2
            }
        }
    ]
}