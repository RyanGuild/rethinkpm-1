{
  "name": "rethinkpm",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "node server/server",
    "server": "nodemon server/server",
    "client": " npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client",
    "check-format": "prettier --config ./.prettierrc -c ./server/**/*.js ./server/*.js",
    "format": "prettier --config ./.prettierrc --write ./server/**/*.js ./server/*.js",
    "test": "jest --coverage"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "concurrently": "^4.1.0",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "gravatar": "^1.8.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.7.5",
    "node-cron": "^2.0.3",
    "nodemailer": "^6.3.0",
    "request": "^2.88.0",
    "request-promise": "^4.2.4",
    "socket.io": "^2.3.0",
    "twilio": "^3.34.0"
  },
  "devDependencies": {
    "jest": "^25.1.0",
    "prettier": "^1.19.1",
    "supertest": "^4.0.2"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/server/__tests__/**/*.js",
      "**/server/__tests__/*.js"
    ],
    "collectCoverageFrom": [
      "**/server/**/*.js",
      "**/server/*.js"
    ],
    "coveragePathIgnorePatterns": [
      "/server/__tests__/",
      "/node_modules/"
    ]
  }
}